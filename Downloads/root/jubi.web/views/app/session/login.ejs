<div class="row" style="margin:0;">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-left jubi-logo">
      <img src="<%-config.web.contentUrl%>/img/jubi-logo-white-2.png" />
    </div>
    
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 LEARN-DO-INSPIRE text-right">
      <span class="learn">LEARN</span>.
      <span class="do">DO</span>.
      <span class="inspire">INSPIRE</span>
    </div>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 Welcome-to-Modern-Le">
    <p>Welcome to Modern Learning</p>
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
      <br />
      <%- flash() %>
    </div>
    <form id="loginForm" action="/login" method="post" name="loginForm" novalidate>
        <div class="form-group">
            <input type="email" placeholder="Email" name="email" id="emailInput" ng-model="email" ng-class="{'has-error': loginForm.email.$invalid && !loginForm.email.$pristine}"  required/>
          
                <span ng-show="loginForm.email.$touched && loginForm.email.$error.email" class="help-block" ng-cloak style="color:red">Please enter valid email address.</span>
                <span ng-show="loginForm.email.$touched && loginForm.email.$error.required" class="help-block" ng-cloak style="color:red">Please enter email address.</span>
          
        </div>
        <div class="form-group">
            <input type="password" placeholder="Password" name="password" id="passwordInput" ng-model="password" ng-class="{'has-error':loginForm.password.$invalid && !loginForm.password.$pristine}" required/>
           
                <span ng-show="loginForm.password.$touched && loginForm.password.$error.required" class="help-block" ng-cloak style="color:red">Please enter password.</span>
          
        </div>
      <div class="Forgot-your-password">
        <a href="/forgot-password">Forgot your password?</a>
      </div>
      <div class="form-group text-right">
        <button type="submit">Login</button>
      </div>

    </form>
  </div>
</div>