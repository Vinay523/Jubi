<div class="row" style="margin:0;" ng-controller="ResetPasswordController">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-left jubi-logo">
      <img src="<%-config.web.contentUrl%>/img/jubi-logo-white-2.png" />
    
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 LEARN-DO-INSPIRE text-right">
      <span class="learn">LEARN</span>.
      <span class="do">DO</span>.
      <span class="inspire">INSPIRE</span>
    </div>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 New-Password">
    <p>New Password</p>

    <p class="Please-enter-your-ne">
      Please enter your new password.
      
    </p>
    <!--<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4" style="font-size:16px;width: 18.7%;left: 139px;">
      <%- flash() %>
      </div>-->
    <form id="newPwdForm" action="" class="col-md-12" method="post" novalidate="" ng-submit="submit($event)">
      <p class="error-msg">There was an error with your email or password, please try again</p>
      <!--<div class="form-group">
        <input type="email" placeholder="Email"/>
      </div> -->
      
      <div class="form-group">
        <input type="password" placeholder="New Password"/>
      </div>
      <div class="form-group">
        <input type="password" placeholder="Confirm Password"/>
      </div>
      <div class="form-group">
        <button onclick="$('.New-Password').hide();$('.success-msg').show();return false;">Reset Password</button>
      </div>
      <a href="/login" class="Login">Login</a>
    </form>


  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 success-msg">
    <p>Success!</p>
    <p class="Your-password-has-be">
      Your password has been reset<br>
Please Login</p>
    <a href="/login" class="Login">Login</a>
  </div>
</div>