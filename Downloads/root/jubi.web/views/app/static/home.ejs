<div class="row" style="margin:0;">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-left jubi-logo">
      <img src="<%-config.web.contentUrl%>/img/jubi-logo-white-2.png" />
    
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 LEARN-DO-INSPIRE text-right">
      <span class="learn">LEARN</span>.
      <span class="do">DO</span>.
      <span class="inspire">INSPIRE</span>
    </div>
  </div>

    <% if (user) { %>
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 New-Password">
    <form id="Re-loginForm">
      <div class="text-center landscape">
 
              <img  align="middle" src="<%-user.avatarUrl %>/100x100" onerror="this.onerror=null;this.src='<%- config.web.contentUrl %>/img/avatar.jpg';">  
          </div>
    </form>
  
    <h3>
      Welcome back, <%-user.firstName%>!</h3>
    <br>
      <div class="lead">
        <div class="form-group">
          <a href="/user">
            <i class="fa fa-rocket"></i>&nbsp;&nbsp;&nbsp;Go questing!
          </a>
        </div>
        <% if (user.roles[0].id< 4) { %>
          <div class="form-group">
            <a href="/manage">
              <i class="fa fa-pencil-square-o"></i>&nbsp;&nbsp;&nbsp;Manage your programs.
            </a>
          </div>
        <% } %>
        <% if (user.roles[0].id < 3) { %>
          <div>
            <a href="/admin">
              <i class="fa fa-key"></i>&nbsp;&nbsp;&nbsp;Administer the system.
            </a>
          </div>
        <% } %>
      </div>
      <div class="text-sm">
        <a href="/logout">
          <i class="icon icon-exit"></i>&nbsp;&nbsp;Logout
        </a>
      </div>
    </div>
  <% } else { %>
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 Welcome-to-Modern-Le">
    <p>Welcome to Modern Learning</p>
    <form id="loginForm" name="loginForm" action="/login" method="post" novalidate>
        <div class="form-group">
            <input type="email" placeholder="Email" name="email" id="emailInput" ng-model="email" ng-class="{'has-error': loginForm.email.$invalid && !loginForm.email.$pristine}" required />

            <span ng-show="loginForm.email.$touched && loginForm.email.$error.email" class="help-block" style="color:red" ng-cloak >Please enter valid email address.</span>
            <span ng-show="loginForm.email.$touched && loginForm.email.$error.required" class="help-block" style="color:red" ng-cloak >Please enter email address.</span>

        </div>
        <div class="form-group">
            <input type="password" placeholder="Password" name="password" id="passwordInput" ng-model="password" ng-class="{'has-error':loginForm.password.$invalid && !loginForm.password.$pristine}" required />

            <span ng-show="loginForm.password.$touched && loginForm.password.$error.required" class="help-block" style="color:red" ng-cloak>Please enter password.</span>

        </div>
      <div class="Forgot-your-password">
        <a href="/forgot-password">Forgot your password?</a>
      </div>
      <div class="form-group text-right">
        <button type="submit">Login</button>
      </div>

    </form>
  </div>
  <% } %>





</div>
