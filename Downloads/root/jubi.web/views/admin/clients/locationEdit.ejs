<script type="text/ng-template" id="editLocation.html">
    <form action="" method="post" ng-submit="ok($event)">
        <div class="modal-header">
            <button type="button" class="close" aria-label="Close" ng-click="cancel()"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{title}}</h4>
        </div>
        <div class="modal-body clearfix">
            <div class="form-group" ng-class="{'has-error':val.name.req}">
                <label for="name" class="control-label">Name</label>
                <input type="text" id="name" name="name" class="form-control input-sm" ng-model="location.name" >
                <div class="text-xs text-danger" ng-show="val.name.req">Name cannot be empty.</div>
            </div>
            <div class="form-group" ng-class="{'has-error':val.address.req}">
                <label for="address" class="control-label">Address *</label>
                <input type="text" id="address" name="address" class="form-control input-sm" ng-model="location.address" >
                <div class="text-xs text-danger" ng-show="val.address.req">Address cannot be empty.</div>
            </div>
            <div class="form-group">
                <label for="address2" class="control-label">Address Line #2</label>
                <input type="text" id="address2" name="address2" class="form-control input-sm" ng-model="location.address2" >
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6" style="padding-right:3px;" ng-class="{'has-error':val.city.req}">
                        <label for="city" class="control-label">City *</label>
                        <input type="text" id="city" name="city" class="form-control input-sm" ng-model="location.city" >
                        <div class="text-xs text-danger" ng-show="val.city.req">City cannot be empty.</div>
                    </div>
                    <div class="col-xs-3" style="padding-left:3px;padding-right:3px;">
                        <span ng-show="location.country.id=='US'">
                            <label for="state" class="control-label">State</label>
                            <select id="state" ng-model="selectState" class="form-control input-sm" ng-options="state as state.name for state in states">
                                <option value="">- select -</option>
                            </select>
                        </span>
                        <span ng-show="location.country.id!='US'">
                            <label for="province" class="control-label">Province</label>
                            <input id="province" type="text" class="form-control input-sm" ng-model="location.stateOrProvince.name">
                        </span>
                    </div>
                    <div class="col-xs-3" style="padding-left:3px;">
                        <label for="postalCode" class="control-label">Postal Code</label>
                        <input type="text" id="postalCode" name="postalCode" class="form-control input-sm" ng-model="location.postalCode" >
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="country" class="control-label">Country</label>
                <select id="country" ng-model="selectCountry" class="form-control input-sm" ng-options="country as country.name for country in countries"></select>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6" style="padding-right:3px;">
                        <label for="phone" class="control-label">Phone Number</label>
                        <input type="text" id="phone" name="phone" class="form-control input-sm" ui-mask="(999) 999-9999" ng-model="location.phoneNumber" >
                    </div>
                    <div class="col-xs-6" style="padding-left:3px;">
                        <label for="fax" class="control-label">Fax Number</label>
                        <input type="text" id="fax" name="fax" class="form-control input-sm" ui-mask="(999) 999-9999" ng-model="location.faxNumber" >
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-default btn-sm" ng-click="cancel()" type="button">Cancel</button>
            <button class="btn btn-success btn-sm" type="submit">OK</button>
        </div>
    </form>

</script>