<script type="text/ng-template" id="createUserGroup.html">

    <div class="modal-content" ng-controller="UserGroupsController" ng-click="todoClick()">
        <div class="modal-header text-center" ng-style="getHeaderCustomStyle()">
            <h3>Create User Group</h3>
        </div>
        <div class="modal-body">
            <div class="form-group" ng-class="{'has-error': ui.val.content.opening.req}">
                <div class="row">
                    <div class="col-xs-12">
                        <label class="control-label" style="font-size:12px;">Name of group:</label>
                        <input style="width:100%;color:black;"
                               type="text"
                               ng-model="model.name"/>

                        <div class="text-sm text-danger text-val"
                             ng-if="ui.val.name.req">
                            Must include name
                        </div>
                        <div class="text-sm text-danger text-val"
                             ng-if="ui.val.name.dup">
                            Name must be unique
                        </div>
                        <div class="text-sm text-danger text-val"
                             ng-if="ui.val.name.length">
                            Name cannot be greater than 25 characters
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary"
                    ng-click="cancelCreateUserGroup($event)">
                Cancel
            </button>
            <button class="btn btn-primary"
                    ng-disabled="submitted"
                    ng-click="submitGroup($event)">
                Save
            </button>
        </div>
    </div>
</script>
