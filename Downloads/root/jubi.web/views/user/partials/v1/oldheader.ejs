<nav class="navbar navbar-default" style="text-align:center" ng-style="getHeaderCustomStyle()">
    <div ng-if="logoUrl && logoCenter" style="position:absolute;width:100%">
        <img style="height:52px;" ng-src="{{logoUrl}}"/>
    </div>
    <img ng-if="logoUrl && logoLeft && window.innerWidth <= 768" style="height:52px;float:left;" ng-src="{{logoUrl}}"/>

    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" ng-click="adjustHeightAfterTimeout()"
                    data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" style="overflow-y:visible;text-align:center"
             id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav programs-list"
                style="float:left;margin-right:0px;margin-top:0px;margin-bottom:0px"
                ng-mouseleave="setButtonNotHovered('Program Selector')"
                ng-mouseover="setButtonHovered('Program Selector')">
                <li class="dropdown" style="margin-left: -30px;">
                    <a href="javascript:void(0)" style="height:52px;"
                       ng-style="getButtonCustomStyle('Program Selector')" class="dropdown-toggle"
                       data-toggle="dropdown" role="button"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="icon-stack icon"></i>
                        &nbsp;&nbsp;{{(program ? program.title : 'My Programs')}}
                    </a>
                    <ul class="dropdown-menu" ng-if="programs.length<=0">
                        <li ng-if="canManage()">
                            <a ng-style="getProgramSelectorStyle()" href="/manage"><span class="hidden-xs"><i
                                            class="fa fa-table"></i> Manage Your Programs</span></a>
                        </li>
                    </ul>
                    <ul class="dropdown-menu" style="z-index:100000" ng-if="programs.length>0"
                        ng-style="getProgramSelectorStyle()">
                        <li ng-repeat="program in programs">
                            <a href="javascript:void(0)" ng-click="goToProgram(program)"
                               ng-mouseleave="program.hovered = false" ng-mouseover="program.hovered = true"
                               ng-style="getProgramButtonStyle(program)" style="display:block;">
                                <span ng-if="program.imageUrl">
                                    <img alt="" ng-src="{{program.imageUrl}}/100x100" style="width:50px;">
                                    &nbsp;&nbsp;
                                </span>
                                {{program.title}}
                            </a>
                        </li>
                        <li ng-if="canManage()" class="divider hidden-xs"></li>
                        <li ng-if="canManage()">
                            <a href="/manage" ng-mouseleave="setButtonNotHovered('Manage')"
                               ng-mouseover="setButtonHovered('Manage')" ng-style="getButtonCustomStyle('Manage')"><span
                                        class="hidden-xs"><i class="fa fa-table"></i> Manage Your Programs</span></a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right"
                style="float:right;margin-left:0px;margin-right:0px;margin-top:0px;margin-bottom:0px">
                <li>
                    <a href="javascript:void(0)" ng-click="toggle.asideNav=!toggle.asideNav;adjustHeightAfterTimeout();"
                       ng-mouseleave="setButtonNotHovered('Expand')"
                       ng-mouseover="setButtonHovered('Expand')" ng-style="getButtonCustomStyle('Expand')"
                       style="line-height:initial;height:52px">
                        <i style="margin-top:5px" class="fa fa-bars"></i>
                    </a>
                </li>
            </ul>
            <img ng-if="logoUrl && logoLeft && window.innerWidth > 768" style="height:52px;float:left;" ng-src="{{logoUrl}}"/>
        </div>
    </div>
</nav>

