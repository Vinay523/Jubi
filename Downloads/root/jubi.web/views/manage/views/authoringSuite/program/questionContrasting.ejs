<div class="panel panel-default">
    <div class="panel-heading">
        Similarities
    </div>
    <div class="panel-body">

        <ul dnd-list="question.workAnswers.contrasting.similarities.answers"
            dnd-drop="contrastingAnswerDrop(event, index, item, external, type, 'similarities', question)"
            dnd-allowed-types="['contrastingAnswer']">
            <li ng-repeat="answer in question.workAnswers.contrasting.similarities.answers"
                dnd-type="'contrastingAnswer'"
                dnd-draggable="answer"
                dnd-moved="question.workAnswers.contrasting.similarities.answers.splice($index, 1)"
                dnd-selected="question.workAnswers.contrasting.similarities.selectedAnswer=answer"
                dnd-effect-allowed="move"
                dnd-disable-if="!question.workAnswers.contrasting.similarities.canDrag || quest.publishedAt"
                ng-class="{'selected':question.workAnswers.contrasting.similarities.selectedAnswer===answer}">

                <div class="panel-group accordion">
                    <div class="panel panel-default" ng-class="{'quest-error':answer.hasError}">
                        <div class="panel-heading" style="padding-left:10px;">
                            <div class="panel-title">
                                <div class="text-muted handle"
                                     ng-mousedown="canEditEntity(quest, program) && contrastingAnswerDragHandleDown($event,question,answer,'similarities')"
                                     ng-mouseup="canEditEntity(quest, program) && contrastingAnswerDragHandleUp($event,question,answer,'similarities')">
                                    <span style="margin-left:4px"
                                          class="fa fa-ellipsis-v"
                                          ng-style="{ color: getEntityHandleColor(quest, program) }"></span>
                                </div>
                                <div class="content">
                                    <div class="row">
                                        <div class="col-xs-12" ng-class="{'has-error':answer.val.answer.req}">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Similarity"
                                                   ng-model="answer.answer">
                                            <div class="text-sm text-danger" ng-if="answer.val.answer.req">Similarity
                                                cannot be empty.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-xs">
                                        <a href="#"
                                           ng-click="canEditEntity(quest, program) && contrastingRemoveAnswer($event,answer,$index,question,'similarities')">Remove
                                            Similarity</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
        <button ng-disabled="!canEditEntity(quest, program)"
                type="button"
                class="btn btn-primary outline btn-block"
                ng-click="addContrastingAnswer('similarities',question)">
            <span class="icon fa fa-plus" title="Add New Answer"></span> Add New Similarity
        </button>

    </div>
</div>
